user = int(input("Enter the number whose index is to found: "))

def linearSearch(array):
  for i in range (len(array)):
    if user == array[i]:
      return i
  else:
    return -1


array = [3, 7, 8, 4, 9, 0, 2, 5]
result = linearSearch(array)

if result != -1:
  print("The given number", user, "is found at index", result)

else:
  print("Given number", user, "not found.")